<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">


    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        
        <resource-bundle>
            <base-name>pe.edu.cibertec.recursos.mensajes</base-name>
            <var>msjs</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>pe.edu.cibertec.recursos.cliente</base-name>
            <var>msjsCliente</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/principal.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>report</from-outcome>
            <to-view-id>/reporte.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>result</from-outcome>
            <to-view-id>/resultado.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>customer_create</from-outcome>
            <to-view-id>/pages/cliente/nuevo.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>customer_list</from-outcome>
            <to-view-id>/pages/cliente/listar.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>            
            <from-outcome>customer_edit</from-outcome>
            <to-view-id>/pages/cliente/editar.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>            
            <from-outcome>customer_detail</from-outcome>
            <to-view-id>/pages/cliente/detalle.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>customer_delete</from-outcome>
            <to-view-id>/pages/cliente/eliminar.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>product_create</from-outcome>
            <to-view-id>/pages/producto/nuevo.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>product_list</from-outcome>
            <to-view-id>/pages/producto/listar.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>product_detail</from-outcome>
            <to-view-id>/pages/producto/detalle.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>product_edit</from-outcome>
            <to-view-id>/pages/producto/editar.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>cart_add</from-outcome>
            <to-view-id>/pages/carrito/agregar.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>cart_list</from-outcome>
            <to-view-id>/pages/carrito/carrito.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>cart_checkout</from-outcome>
            <to-view-id>/pages/carrito/checkout.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
